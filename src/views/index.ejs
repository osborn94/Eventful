
<section class="hero-section">
  <div class="container text-center">

    <h1 class="hero-title">
      Discover Events That Matter
    </h1>

    <p class="hero-subtitle">
      Find, book and experience amazing events happening around you.
    </p>

    <!-- Search -->
    <div class="row justify-content-center mt-4">
      <div class="col-lg-8">
        <form action="/events" method="GET" class="search-bar">
          <div class="row g-2">
            <div class="col-md-5">
              <input 
                type="text" 
                class="form-control" 
                name="search" 
                placeholder="Search events..."
                value="<%= searchQuery || '' %>">
            </div>

            <div class="col-md-4">
              <input 
                type="text" 
                class="form-control" 
                name="location" 
                placeholder="Location"
                value="<%= locationQuery || '' %>">
            </div>

            <div class="col-md-3">
              <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-search"></i> Search
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Trust Line -->
    <div class="mt-4">
      <small class="text-light opacity-75">
        Trusted by <strong><%= stats?.totalAttendees || '10,000+' %></strong> attendees across Nigeria
      </small>
    </div>

  </div>
</section>


 <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <h1 class="display-4 fw-bold text-center">Discover Amazing Events</h1>
      <p class="lead text-center">Find, book, and experience unforgettable moments.</p>
    </div>
  </section>

  <!-- Events Section -->
  <section class="container my-5">

    <% if (events && events.length > 0) { %>

      <div id="eventCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">

        <div class="carousel-inner">

          <% events.forEach((event, index) => { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
              
              <div class="card shadow-lg border-0 event-card">
                
                <% if (event.image) { %>
                  <img src="<%= event.image || '/images/default-event.jpeg' %>" class="img-fluid">
                <% } else { %>
                  <img src="/images/default-event.jpeg" class="card-img-top">
                <% } %>

                <div class="card-body text-center p-4">
                  <h3 class="fw-bold mb-3"><%= event.title %></h3>

                  <p class="text-muted">
                    <%= event.description ? event.description.substring(0, 150) : '' %>...
                  </p>

                  <a href="/events/<%= event.slug %>" class="btn btn-primary px-4 mt-3">
                    View Event
                  </a>
                </div>

              </div>

            </div>
          <% }) %>

        </div>

        <!-- Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#eventCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#eventCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>

      </div>

    <% } else { %>

      <div class="text-center py-5">
        <h4 class="text-muted">No upcoming events available.</h4>
      </div>

    <% } %>

  </section>



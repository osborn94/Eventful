<h1 class="mb-4 text-center">Welcome to Eventful</h1>

<p class="text-center mb-5">
  Discover and apply for upcoming events around you.
</p>

<div class="row">

  <% if (events && events.length > 0) { %>

    <% events.forEach(event => { %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            
            <p class="text-muted">
              <%= new Date(event.date).toDateString() %>
            </p>

            <p>
              Organized by <strong><%= event.creator.name %></strong>
            </p>

            <a href="/events/<%= event._id %>" 
               class="btn btn-success btn-sm">
               View Details
            </a>
          </div>
        </div>
      </div>
    <% }) %>

  <% } else { %>

    <div class="text-center">
      <p>No upcoming events available at the moment.</p>
    </div>

  <% } %>

</div>

<!-- Call To Action -->
<hr class="my-5">

<div class="text-center">
  <h4>Want to create your own event?</h4>
  <a href="/register" class="btn btn-primary mt-2">
    Get Started
  </a>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Eventful</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

<div class="container-fluid">
  <div class="row">

    <!-- Sidebar -->
    <%- include("../partials/sidebar") %>
    <%- include("../partials/createEventModal") %>

    <nav class="navbar navbar-expand-lg d-lg-none">
      <div class="container-fluid nav-container">
        <h2><span>Welcome, <%= user.name %></span></h2>
        
        <button id="themeToggle" class="theme-toggle">
          üåô
        </button>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" style="background: var(--accent);">
            <span class="navbar-toggler-icon"></span>
        </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <div class="nav-links navbar-nav">
                    
                   <% if (user.role === "creator") { %>

              <li class="nav-item mb-2">
        <a class="nav-link text-white" href="/dashboard/creator">
          Dashboard
        </a>
      </li>

        <li class="nav-item mb-2">
          <a class="nav-link text-white" href="/events">
            All Events
          </a>
        </li>


        <li class="nav-item mb-2">
          <a class="nav-link text-white" href="#" data-bs-toggle="modal" data-bs-target="#createEventModal">
            + Create Event
          </a>  
        </li>

        <li class="nav-item mb-2">
          <a class="nav-link text-white" href="/analytics">
            Analytics
          </a>
        </li>

        <!-- <li class="nav-item mb-2">
          <a class="nav-link text-white" href="/reminders">
            Reminders
          </a>
        </li> -->

        <li class="nav-item mb-2">
          <a class="nav-link text-white" href="/scanner">
            Scan Tickets
          </a>
        </li>

      <% } %>

      <% if (user.role === "eventee") { %>

        <li class="nav-item mb-2">
          <a class="nav-link text-white" href="/dashboard/eventee">
            Dashboard
          </a>
        </li>

        <li class="nav-item mb-2">
          <a class="nav-link text-white" href="/events">
            Browse Events
          </a>
        </li>

        <li class="nav-item mb-2">
          <a class="nav-link text-white" href="/tickets">
            My Tickets
          </a>
        </li>


      <% } %>

      <li class="nav-item mt-4">
        <form method="POST" action="/logout">
          <button class="btn btn-danger w-100">
            Logout
          </button>
        </form>
      </li>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
      <%- body %>
    </main>

  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  const toggleBtn = document.getElementById("themeToggle");
  const body = document.body;

  // Load saved theme
  if (localStorage.getItem("theme") === "dark") {
    body.classList.add("dark-mode");
    toggleBtn.textContent = "‚òÄÔ∏è";
  }

  toggleBtn.addEventListener("click", () => {
    body.classList.toggle("dark-mode");

    if (body.classList.contains("dark-mode")) {
      localStorage.setItem("theme", "dark");
      toggleBtn.textContent = "‚òÄÔ∏è";
    } else {
      localStorage.setItem("theme", "light");
      toggleBtn.textContent = "üåô";
    }
  });
</script>
</body>
</html>

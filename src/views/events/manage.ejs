<div class="container py-5">

  <div class="row g-5">

    <!-- ================= LEFT: EVENT DETAILS ================= -->
    <div class="col-lg-8">

      <div class="card border-0 shadow-sm overflow-hidden">

        <!-- Event Image -->
        <img 
          src="<%= event.image ? event.image : '/images/default-event.jpeg' %>" 
          alt="<%= event.title %>"
          style="height:300px; object-fit:cover;"
        >

        <div class="card-body p-4">

          <!-- Title + Price -->
          <div class="d-flex justify-content-between align-items-start mb-3">

            <div>
              <h2 class="fw-bold mb-1"><%= event.title %></h2>

              <p class="text-muted mb-1">
                <i class="bi bi-calendar-event"></i>
                <%= new Date(event.date).toDateString() %>
              </p>

              <p class="text-muted">
                <i class="bi bi-geo-alt"></i>
                <%= event.location %>
              </p>
            </div>

            <span class="badge bg-primary fs-6 px-3 py-2">
              <%= event.price === 0 
                  ? "Free" 
                  : "‚Ç¶" + Number(event.price).toLocaleString() %>
            </span>

          </div>

          <hr>

          <!-- Description -->
          <h5 class="fw-semibold mb-3">Event Description</h5>

          <p style="line-height:1.8;">
            <%= event.description %>
          </p>

        </div>

      </div>

    </div>


    <!-- ================= RIGHT: ACTION PANEL ================= -->
    <div class="col-lg-4">

      <div class="card border-0 shadow-lg p-4 action-card">

        <h5 class="fw-bold mb-4">Manage Event</h5>

        <a href="/creator/events/<%= event.slug %>/edit" 
           class="btn btn-warning w-100 mb-3">
          ‚úèÔ∏è Edit Details
        </a>

        <form action="/creator/events/<%= event.slug %>?_method=DELETE" 
              method="POST"
              onsubmit="return confirm('Are you sure you want to delete this event?')">

          <button type="submit" class="btn btn-danger w-100">
            üóë Delete Event
          </button>

        </form>

        <hr>

        <a href="/dashboard/creator" 
           class="btn btn-outline-primary w-100">
          Go Back
        </a>

      </div>

    </div>

  </div>

</div>

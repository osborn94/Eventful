<h2 class="mb-4">Creator Overview</h2>

<div class="row mb-4">
  <div class="col-md-4">
    <div class="card shadow-sm p-3">
      <h6>Total Events</h6>
      <h2><%= stats?.totalEvents || 0 %></h2>
    </div>
  </div>



  <div class="col-md-4">
    <div class="card shadow-sm p-3">
      <h6>Total Tickets Sold</h6>
      <h2><%= stats?.totalTickets || 0 %></h2>
    </div>
  </div>
</div>

<h4 class="mb-3">My Events</h4>

<div class="row">
  <% myEvents.forEach(event => { %>
    <div class="col-md-6 mb-3">
      <div class="card shadow-sm p-3">
        <h5><%= event.title %></h5>
        <p><%= new Date(event.date).toDateString() %></p>
        <a href="/creator/events/<%= event.slug %>" class="btn btn-sm btn-outline-primary">
          Manage Event
        </a>

      </div>
    </div>
  <% }) %>
</div>
